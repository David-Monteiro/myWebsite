/* Resume */

.cvBar{
	max-width: 90%;
	margin-top: 6px;
    margin-bottom: 6px;
	border-width: 1px;
	border-color: #C0C0C0;
}
.cvSection {
	margin: 30px;
}

.cvSection body {
	background: #181818; 
	font-family: 'Lato', helvetica, arial, sans-serif; 
	font-size: 16px; 
	color: #222;
}

.cvSection  {
	font-size: 1em;
	line-height: 1.4em;
	margin-bottom: 20px;
	color: #444;
}


.cvSubSection {
	margin: 20px 5px;
	padding-top: 20px;
	/*border-top: 1px solid #dedede;
	padding: 20px 0 0;
	margin-bottom: 20px;*/
}

.sectionTitle {
	font-family: 'Rokkitt', Helvetica, Arial, sans-serif;
	font-style: italic;
	font-size: 1.5em;
	color: #cf8a05;
	margin-left: 12px;
}

.sectionSubTitle {
	font-family: 'Rokkitt', Helvetica, Arial, sans-serif;
	font-size: 20px;
	padding-right: 3px;
	margin-bottom: 0px;
}

.sectionDetails {
	font-size: 14px;
	font-style: italic;
	margin-bottom: 3px;
}

.sectionSpan{
	font-size: 14px;
	font-style: italic;
	margin-bottom: 3px;
	font-weight: 300!important;
}

.sectionContent {
	width: 99%;
	margin: 2px 4px;
}


.keySkills {
	list-style-type: none;
	-moz-column-count:3;
	-webkit-column-count:3;
	column-count:3;
	margin-bottom: 20px;
	font-size: 1em;
	color: #444;
}

.keySkills ul li {
	margin-bottom: 3px;
}
